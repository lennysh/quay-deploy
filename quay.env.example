#!/bin/bash
#
# Shared configuration variables for the Quay deployment scripts.
#

# --- Database Settings (Names must match container expectations) ---
POSTGRES_DB=quay
POSTGRES_USER=quay
# Do NOT wrap this password in quotes.
POSTGRES_PASSWORD=REPLACEME
PG_VERSION="15"

# --- Redis Settings ---
# Do NOT wrap this password in quotes.
REDIS_PASS=REPLACEME

# --- Podman Network ---
QUAY_NET="quay-net"
QUAY_NET_SUBNET="10.90.0.0/24"
PG_IP="10.90.0.10"
REDIS_IP="10.90.0.11"

# --- Quay Data Directory ---
# It defaults to '~/quay-data'.
export QUAY="${QUAY:-$HOME/quay-data}"